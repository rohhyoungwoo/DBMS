-- 테이블 생성(DDL)
CREATE TABLE TBL_MEMBER(
	MEMBER_ID NUMBER,
	MEMBER_NAME VARCHAR2(100),
	MEMBER_AGE NUMBER(3)
);

SELECT * FROM TBL_MEMBER;

--데이터 추가
INSERT INTO TBL_MEMBER
VALUES(1, '노형우', 20);

INSERT INTO TBL_MEMBER
VALUES(2, '신짱구', 5);

INSERT INTO TBL_MEMBER
VALUES(3, '신짱아', 2);

INSERT INTO TBL_MEMBER(MEMBER_ID, MEMBER_NAME)
VALUES(4, '유리');

INSERT INTO TBL_MEMBER(MEMBER_AGE)
VALUES(5);


--데이터 수정 UPDATE
UPDATE TBL_MEMBER 
SET MEMBER_AGE = 5;

SELECT  * FROM TBL_MEMBER;

UPDATE TBL_MEMBER 
SET MEMBER_AGE = 20
WHERE MEMBER_NAME = '노형우';

UPDATE TBL_MEMBER 
SET MEMBER_AGE = 2
WHERE MEMBER_ID = 3;

--삭제 : DELETE
DELETE FROM TBL_MEMBER
WHERE MEMBER_AGE = 5;

DELETE FROM TBL_MEMBER;

SELECT * FROM TBL_MEMBER;

-- 학생 테이블 생성
-- CREATE TABLE 테이블명 {
--	컬럼명 데이터타입-문자(VARCHAR@, CHAR), 숫자(NUMBER), 날짜(DATE)
-- );
CREATE TABLE TBL_STUDENT(
	STUDENT_NUMBER NUMBER,
	STUDENT_NAME VARCHAR2(1000),
	STUDENT_MATH NUMBER,
	STUDENT_ENG NUMBER,
	STUDENT_KOR NUMBER,
	STUDENT_GRADE VARCHAR2(100)
);
--테이블 삭제
--DROP TABLE TBL_STUDENT


/* 학생 테이블에 데이터 추가
 * 학생번호 이름 수학 영어 국어
 * 1	김철수	90	90	90
 * 2	홍길동	70	25	55
 * 3	이유리	89	91	77
 * 4	김웅이	48	100	100
 * 5	신짱구	50	10	NULL
 */
SELECT * FROM TBL_STUDENT;

INSERT TBL_STUDENT
VALUES (1, '김철수', 90, 90, 90, ' ');
























